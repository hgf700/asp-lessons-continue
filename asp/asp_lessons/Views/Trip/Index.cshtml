@model IEnumerable<aspapp.Models.Trip>

@{
    ViewData["Title"] = "Lista Wycieczek";
}

<h2>Lista Wycieczek</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tytuł</th>
            <th>Opis</th>
            <th>Przewodnik</th>
            <th>Podróżnicy</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trip in Model)
        {
            <tr>
                <td>@trip.Title</td>
                <td>@trip.Description</td>
                <td>@(trip.Guide?.Firstname ?? "Brak")</td>
                <td>
                    @if (trip.Travelers != null && trip.Travelers.Any())
                    {
                        <ul>
                            @foreach (var traveler in trip.Travelers)
                            {
                                <li>@traveler.Firstname</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>Brak</span>
                    }
                </td>
                <td>
                    <a asp-action="EditTrip" asp-route-id="@trip.Id" class="btn btn-sm btn-warning">Edytuj</a>
                    <a asp-action="DeleteTrip" asp-route-id="@trip.Id" class="btn btn-sm btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Dodaj nową wycieczkę</a>
