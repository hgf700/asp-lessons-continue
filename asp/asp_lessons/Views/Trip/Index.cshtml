@model IEnumerable<aspapp.Models.VM.TripViewModel>
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInManager
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Trip List";
    var user = HttpContextAccessor.HttpContext?.User;
}

<h1>Trip List</h1>

<p>
    <a href="@Url.Action("Create", "Trip")" class="btn btn-primary">Create New Trip</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Destination</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Guide</th>
            <th>Travelers</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trip in Model)
        {
            <tr>
                <td>@trip.Destination</td>
                <td>@trip.StartDate.ToShortDateString()</td>
                <td>@trip.EndDate.ToShortDateString()</td>
                <td>@trip.Guide?.Firstname @trip.Guide?.Lastname</td>
                <td>
                    @foreach (var traveler in trip.Travelers)
                    {
                        <span>@traveler.Firstname @traveler.Lastname</span>

                        <br />
                    }
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Trip", new { id = trip.TripId })" class="btn btn-warning btn-sm">Edit</a>
                    <!-- Add delete functionality here if needed -->
                </td>
                @if (user.IsInRole("Admin"))
                {
                    <td>
                        <!-- Add edit or delete links here, if required -->
                        <a href="@Url.Action("Delete", "Trip", new { id = trip.TripId })" class="btn btn-warning btn-sm">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Home</a>