@model aspapp.Models.VM.TripViewModel

@{
    ViewData["Title"] = "Delete Trip";
}

<h2>Delete Trip</h2>

<h4>Are you sure you want to delete this trip?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Destination</dt>
    <dd class="col-sm-10">@Model.Destination</dd>

    <dt class="col-sm-2">Start Date</dt>
    <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>

    <dt class="col-sm-2">End Date</dt>
    <dd class="col-sm-10">@Model.EndDate.ToShortDateString()</dd>

    <dt class="col-sm-2">Guide</dt>
    <dd class="col-sm-10">@Model.Guide?.Firstname</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="TripId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
