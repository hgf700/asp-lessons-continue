@model aspapp.Models.Trip

@{
    ViewData["Title"] = "Usuń wycieczkę";
}

<h2>Usuń wycieczkę</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="DeleteTripConfirmed" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label>Tytuł:</label>
                <input asp-for="Title" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label>Opis:</label>
                <input asp-for="Description" class="form-control" readonly />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-danger">Usuń</button>
                <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
            </div>
        </form>
    </div>
</div>
