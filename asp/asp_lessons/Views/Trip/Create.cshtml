@model aspapp.Models.VM.TripViewModel

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GuideId"></label>
        <select asp-for="GuideId" asp-items="@(new SelectList(Model.Guides, "Id", "Firstname"))" class="form-control">
            <option value="">Wybierz przewodnika</option>
        </select>
        <span asp-validation-for="GuideId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Podróżnicy</label>
        <select asp-for="TravelerIds" asp-items="@(new MultiSelectList(Model.Travelers, "Id", "Firstname"))" class="form-control" multiple="multiple">
        </select>
        <span asp-validation-for="TravelerIds" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
