@model aspapp.Models.VM.TripViewModel

@{
    ViewData["Title"] = "Edytuj wycieczkę";
}

<h2>Edytuj wycieczkę</h2>

<form asp-action="EditTrip" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GuideId"></label>
        <select asp-for="GuideId" asp-items="@(new SelectList(Model.Guides, "Id", "Firstname"))" class="form-control">
            <option value="">Wybierz przewodnika</option>
        </select>
        <span asp-validation-for="GuideId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Podróżnicy</label>
        <select asp-for="TravelerIds" asp-items="@(new MultiSelectList(Model.Travelers, "Id", "Firstname", Model.TravelerIds))" class="form-control" multiple="multiple">
        </select>
        <span asp-validation-for="TravelerIds" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Zapisz" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
